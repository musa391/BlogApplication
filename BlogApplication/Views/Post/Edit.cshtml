@model Post
@{
    ViewData["Title"] = "Post Düzenle";
}

<h1>Post Düzenle</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" /> <!--Post modelindeki Id propertysine bağlanır, gizli alan olarak formda yer alır.-->

    <div class="form-group">
        <label asp-for="Baslik" class="control-label"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span> <!--Post modelindeki Başlık propertysine bağlanır-->
    </div>
    <div class="form-group">
        <label asp-for="AltBaslik" class="control-label"></label>
        <input asp-for="AltBaslik" class="form-control" />
        <span asp-validation-for="AltBaslik" class="text-danger"></span> <!--Post modelindeki AltBaslik propertysine bağlanır-->
    </div>
    <div class="form-group">
        <label asp-for="Icerik" class="control-label"></label>
        <input asp-for="Icerik" class="form-control" />
        <span asp-validation-for="Icerik" class="text-danger"></span> <!--Post modelindeki İçerik propertysine bağlanır-->
    </div>
    <div class="form-group">
        <label asp-for="YayımlanmaTarihi" class="control-label"></label>
        <input asp-for="YayımlanmaTarihi" class="form-control" />
        <span asp-validation-for="YayımlanmaTarihi" class="text-danger"></span> <!--Post modelindeki PublishedDate propertysine bağlanır-->
    </div>
    <div class="form-group">
        <label asp-for="Yazar" class="control-label"></label>
        <input asp-for="Yazar" class="form-control" />
        <span asp-validation-for="Yazar" class="text-danger"></span> <!--Post modelindeki Yazar propertysine bağlanır-->
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

